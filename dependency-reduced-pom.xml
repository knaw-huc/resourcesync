                  </descriptorRefs>
                  <finalName>resourcesync</finalName>
                  <appendAssemblyId>false</appendAssemblyId>
                  <attach>false</attach>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
